{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es6", "dom", "es2015.promise"],
      "jsx": "react-native",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "outDir": "./lib",
      "rootDir": "./src",
      "baseUrl": "./src",
      "types": ["react-native"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
  }
  